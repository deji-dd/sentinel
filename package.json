{
  "name": "sentinel",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "dev": "pnpm --filter ui dev",
    "build": "pnpm --filter ui build",
    "start": "pnpm --filter ui start",
    "lint": "pnpm --filter ui lint",
    "worker:dev": "pnpm --filter worker dev",
    "worker:build": "pnpm --filter worker build",
    "worker:start": "pnpm --filter worker start",
    "worker:trigger": "pnpm --filter worker trigger",
    "bot:dev": "pnpm --filter bot dev",
    "bot:build": "pnpm --filter bot build",
    "bot:deploy-commands": "pnpm --filter bot deploy-commands",
    "dev:all": "pnpm -r dev",
    "build:all": "pnpm -r build",
    "generate:torn-types": "pnpm --filter @sentinel/shared generate-types && pnpm --filter @sentinel/shared build",
    "supabase:push": "pnpm dlx supabase db push && pnpm dlx supabase db push --local"
  },
  "devDependencies": {
    "openapi-typescript": "^7.10.1"
  }
}
