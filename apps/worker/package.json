{
  "name": "worker",
  "version": "1.0.0",
  "private": true,
  "description": "Sentinel worker processes for background jobs",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "tsc",
    "start": "node --env-file=.env dist/index.js",
    "task": "tsx --env-file=.env",
    "trigger": "tsx --env-file=.env trigger.ts",
    "lint": "eslint src/"
  },
  "dependencies": {
    "@sentinel/shared": "workspace:*",
    "@supabase/supabase-js": "^2.91.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "globals": "^17.1.0",
    "tsx": "^4",
    "typescript": "^5"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.28.0"
}
