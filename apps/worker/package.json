{
  "name": "worker",
  "version": "1.0.0",
  "private": true,
  "description": "Sentinel worker processes for background jobs",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "tsc",
    "start": "node --env-file=.env dist/index.js",
    "start:sync-users": "node --env-file=.env dist/workers/sync-users.js",
    "task": "tsx --env-file=.env",
    "trigger": "tsx --env-file=.env trigger.ts"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.91.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5",
    "tsx": "^4"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.28.0"
}
