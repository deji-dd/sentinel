{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "src/workers/.archive/travel-alerts.ts",
    "src/workers/.archive/travel-data.ts",
    "src/workers/.archive/travel-recommendations.ts",
    "src/workers/.archive/travel-stock-cache.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
